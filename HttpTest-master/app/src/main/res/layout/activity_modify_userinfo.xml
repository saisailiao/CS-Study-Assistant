<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modify_userinfo"
    android:background="#FABCD5">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="113dp"
        android:layout_height="128dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rabbit" />

    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi,很高兴在这里遇见你,"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="lsy"
        android:textSize="50dp"
        android:textColor="#fff"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/background_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail："
        android:textSize="20dp"
        android:textColor="#F686B3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/mail"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/edit_text_selector"
        android:ems="10"
        android:hint="1111111@qq.com"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QQ："
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:textColor="#F686B3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/qq"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/edit_text_selector"
        android:ems="10"
        android:hint="1111111"
        android:inputType="number"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话："
        android:textSize="20dp"
        android:textColor="#F686B3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/edit_text_selector"
        android:ems="10"
        android:hint="12345678901"
        android:inputType="phone"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="目标学校："
        android:textSize="20dp"
        android:textColor="#F686B3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bt_scrollchoose2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:gravity="left"
        android:text="请选择你的目标院校"
        android:textSize="16sp"
        android:stateListAnimator="@null"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="403dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="120dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="考试年份："
        android:textSize="20dp"
        android:textColor="#F686B3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bt_scrollchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:gravity="left"
        android:text="请选择你的考试年份"
        android:textSize="16sp"
        android:stateListAnimator="@null"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="463dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="120dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/sure"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="552dp"
        android:background="@drawable/btn_border"
        android:text="确认修改"
        android:textColor="#fff"
        android:textSize="20sp"
        android:stateListAnimator="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称不可修改"
        android:textSize="15dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="630dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include layout="@layout/picker_layout" />
    <include layout="@layout/picker_layout2" />




</androidx.constraintlayout.widget.ConstraintLayout>