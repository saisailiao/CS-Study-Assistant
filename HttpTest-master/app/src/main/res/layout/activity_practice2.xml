<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practice2Activity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/draw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <!--主界面-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/show1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#F686B3"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:maxLines="10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#FABCD5"
                android:layout_marginTop="350dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="请作答："
                android:textSize="20dp"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!--如果是单选题-->
            <RadioGroup
                android:id="@+id/select"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone">
                <RadioButton
                    android:id="@+id/selectA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="A"
                    android:background="@null"
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/selectB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="B"
                    android:background="@null"
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/selectC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="C"
                    android:background="@null"
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/selectD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="D"
                    android:background="@null"
                    android:textColor="#000"
                    android:textSize="18sp"/>
            </RadioGroup>
            <!--如果是多选题-->
            <CheckBox
                android:id="@+id/selectA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="A"
                android:background="@null"
                android:textColor="#000"
                android:textSize="18sp"/>
            <CheckBox
                android:id="@+id/selectB2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="230dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="B"
                android:background="@null"
                android:textColor="#000"
                android:textSize="18sp"/>
            <CheckBox
                android:id="@+id/selectC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="460dp"
                android:layout_marginLeft="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="C"
                android:background="@null"
                android:textColor="#000"
                android:textSize="18sp"/>
            <CheckBox
                android:id="@+id/selectD2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="460dp"
                android:layout_marginLeft="230dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="D"
                android:background="@null"
                android:textColor="#000"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/answer"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="textMultiLine"
                android:layout_marginTop="400dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:minLines="5"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:background="@android:color/white"
                >
            </EditText>

            <Button
                android:id="@+id/prev"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="530dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/btn_border"
                android:text="上一题"
                android:textColor="#fff"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/next"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="530dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/btn_border"
                android:text="下一题"
                android:textColor="#fff"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--侧滑界面-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_marginRight="-65dp"
            android:layout_gravity="left"
            >
            <TextView
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="答题进度："
                android:textSize="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/progressok_q"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:text=" "
                android:textSize="50dp"
                android:layout_marginTop="120dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/progressnot_q"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text=" "
                android:textSize="50dp"
                android:layout_marginTop="230dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="还剩                 min              s"
                android:textSize="25dp"
                android:layout_marginTop="450dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text=" "
                android:textSize="60dp"
                android:layout_marginTop="415dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.drawerlayout.widget.DrawerLayout>
</androidx.constraintlayout.widget.ConstraintLayout>