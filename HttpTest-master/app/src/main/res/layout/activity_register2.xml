<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FABCD5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register2Activity">

    <ImageView
        android:id="@+id/appimageView"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        app:srcCompat = "@drawable/rabbit"/>

    <TextView
        android:id="@+id/startregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从这里开启你的旅程"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"/>

    <Button
        android:id="@+id/sure"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="552dp"
        android:background="@drawable/btn_border"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="20sp"
        android:stateListAnimator="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <EditText
        android:id="@+id/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="424dp"
        android:background="@drawable/edit_text_selector"
        android:hint="请输入QQ号码"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/qqtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="420dp"
        android:text="QQ："
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageButton
        android:id="@+id/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src = "@drawable/backbutton4"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/yeartext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="340dp"
        android:text="年份："
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/schooltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="260dp"
        android:text="院校："
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_scrollchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#FABCD5"
        android:gravity="left"
        android:text="请选择你的考试年份"
        android:textSize="16sp"
        android:stateListAnimator="@null"
        android:textColor="#ffffff"
        android:layout_marginTop="342dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="128dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <include layout="@layout/picker_layout2" />

    <Button
        android:id="@+id/bt_scrollchoose2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#FABCD5"
        android:gravity="left"
        android:text="请选择你的目标院校"
        android:textSize="16sp"
        android:stateListAnimator="@null"
        android:textColor="#ffffff"
        android:layout_marginTop="262dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="128dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <include layout="@layout/picker_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>