<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="309dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:text="欢迎在题海中倘佯"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home1"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="42dp"
        android:text="欢迎在题海中倘佯~~"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="236dp"
        android:text="刷题"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="236dp"
        android:background="@android:color/transparent"
        android:text="搜题"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home4"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="440dp"
        android:text=" 习题收藏夹"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home5"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="440dp"
        android:text="个人主页"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="112dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/fadajing1"
        android:stateListAnimator="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/person"
        android:layout_width="118dp"
        android:layout_height="123dp"
        android:layout_marginLeft="236dp"
        android:layout_marginTop="308dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/person"
        android:stateListAnimator="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/practice_button"
        android:layout_width="130dp"
        android:layout_height="113dp"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="112dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/pen2"
        android:stateListAnimator="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="136dp"
        android:layout_height="123dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="308dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/folder3"
        android:stateListAnimator="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>